<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Timestamp property for file naming -->
    <timestamp key="bySecond" datePattern="yyyy-MM-dd-HH-mm-ss"/>

    <!-- Console appender with colored output -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %highlight(%-5level) %cyan(%logger{36}) - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender for persistent logs -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/RESTMonkey-${bySecond:-startup}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/RESTMonkey-%d{yyyy-MM-dd-HH-mm-ss}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>100MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Request/Response appender for HTTP traffic -->
    <appender name="HTTP_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/RESTMonkey-http-${bySecond}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/RESTMonkey-http-%d{yyyy-MM-dd-HH-mm-ss}.%i.log</fileNamePattern>
            <maxFileSize>5MB</maxFileSize>
            <maxHistory>14</maxHistory>
            <totalSizeCap>50MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger for HTTP requests -->
    <logger name="dev.mars.RESTMonkey.http" level="INFO" additivity="false">
        <appender-ref ref="HTTP_LOG"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Hot reload appender -->
    <appender name="HOTRELOAD_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/RESTMonkey-hotreload-${bySecond}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/RESTMonkey-hotreload-%d{yyyy-MM-dd-HH-mm-ss}.%i.log</fileNamePattern>
            <maxFileSize>2MB</maxFileSize>
            <maxHistory>7</maxHistory>
            <totalSizeCap>10MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Record/Replay appender -->
    <appender name="RECORDER_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/RESTMonkey-recorder-${bySecond}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/RESTMonkey-recorder-%d{yyyy-MM-dd-HH-mm-ss}.%i.log</fileNamePattern>
            <maxFileSize>5MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>50MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Performance appender -->
    <appender name="PERFORMANCE_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/RESTMonkey-performance-${bySecond}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/RESTMonkey-performance-%d{yyyy-MM-dd-HH-mm-ss}.%i.log</fileNamePattern>
            <maxFileSize>5MB</maxFileSize>
            <maxHistory>14</maxHistory>
            <totalSizeCap>25MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Security appender -->
    <appender name="SECURITY_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/RESTMonkey-security-${bySecond}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/RESTMonkey-security-%d{yyyy-MM-dd-HH-mm-ss}.%i.log</fileNamePattern>
            <maxFileSize>2MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>20MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger for hot reload -->
    <logger name="dev.mars.RESTMonkey.hotreload" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="HOTRELOAD_LOG"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Logger for record/replay -->
    <logger name="dev.mars.RESTMonkey.recorder" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="RECORDER_LOG"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Logger for performance metrics -->
    <logger name="dev.mars.RESTMonkey.performance" level="INFO" additivity="false">
        <appender-ref ref="PERFORMANCE_LOG"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Logger for security events -->
    <logger name="dev.mars.RESTMonkey.security" level="WARN" additivity="false">
        <appender-ref ref="SECURITY_LOG"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Root logger -->
    <root level="DEBUG">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>
